{
    "openapi": "3.0.0",
    "info": {
        "title": "Invoices API",
        "version": "0.1"
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "security": {
        "basicAuth": []
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "tags": [
                    "login"
                ],
                "summary": "Returns a token if autheticated",
                "produces": [
                    "application/json"
                ],
                "description": "Returns a object of user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "int64",
                                        "description": "Email do usuario",
                                        "example": "teste@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "Senha do usuário",
                                        "example": "******"
                                    }
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Logado"
                        }
                    }
                }
            }
        },
        "/api/v1/invoices": {
            "get": {
                "tags": [
                    "invoices"
                ],
                "summary": "Returns a list of invoices",
                "description": "Returns a object of invoice",
                "operationId": "bc7d90facaef99e1846d581b3a3b6efa",
                "responses": {
                    "200": {
                        "description": "A list with invoices"
                    }
                }
            },
            "post": {
                "tags": [
                    "invoices"
                ],
                "security": {
                    "basicAuth": []
                },
                "summary": "Store invoice ",
                "description": "Create invoice",
                "operationId": "2a3d332a2b06bcf3aa6a68444f786beb",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "format": "int64",
                                        "description": "ID of the created user"
                                    },
                                    "type": {
                                        "summary": "P de Pix, B de Boleto e C de Cartão",
                                        "type": "string",
                                        "format": "int64",
                                        "enum": ["P", "C", "B"],
                                        "description": "Type of payment: P de Pix, B de Boleto e C de Cartão",
                                        "example": "P"
                                    },
                                    "paid": {
                                        "type": "integer",
                                        "format": "int64",
                                        "minimum": 0,
                                        "maximum": 1,
                                        "description": "1 for paid and 0 for not paid"
                                    },
                                    "value": {
                                        "type": "number",
                                        "format": "int64",
                                        "description": "Value of invoice"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Create invoice"
                    }
                }
            }
        },
        "/api/v1/invoices/{invoice_id}": {
            "get": {
                "tags": [
                    "invoices"
                ],
                "summary": "Returns a invoice especific",
                "description": "Returns a object of invoice",
                "operationId": "3a528f59d0070e9d0a3b019a0984c0e7",
                "parameters": [
                    {
                        "name": "invoice_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A invoice especific"
                    }
                }
            }
        },
        "/api/v1/users": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Returns a list of users",
                "description": "Returns a object of users",
                "operationId": "12e989554c281d650dff75443acabf54",
                "responses": {
                    "200": {
                        "description": "A list with users"
                    }
                }
            }
        },
        "/api/v1/users/{user_id}": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Returns a user especific",
                "description": "Returns a object of users",
                "operationId": "5b0cb4a38a08204b7fab1d899510161c",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A user especific"
                    }
                }
            }
        }
    }
}